<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_toolbar</item>
        <item name="colorPrimaryDark">@color/dark_statusbar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>


    </style>


    <style name ="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:statusBarColor">#8ef8ef</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="AppTheme.Blue" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="AppTheme.Green" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/green</item>
    </style>
    <style name="AppTheme.Red" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/red</item>
    </style>

    <style name="list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
    </style>


    <style name="profile_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
    </style>


</resources>
