<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_toolbar</item>
        <item name="colorPrimaryDark">@color/dark_statusbar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>


    </style>


    <style name ="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:statusBarColor">#8ef8ef</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="AppTheme.Blue" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="AppTheme.Green" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/green</item>
    </style>
    <style name="AppTheme.Red" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/red</item>

    </style>

</resources>
